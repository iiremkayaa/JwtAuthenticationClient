@model AppUserLogin
    <form method="post" class="w-75 mx-auto p-3 mt-4">
        <div class="form-group">
            <label >Username:</label>
            <span asp-validation-for="@Model.UserName"></span>
            <input asp-for="@Model.UserName" class="form-control" type="text" />
        </div>
        <div class="form-group">
            <label >Password:</label>
            <span asp-validation-for="@Model.Password"></span>
            <input asp-for="@Model.Password" class="form-control" type="text" />
        </div>
        <div>
            <button class="btn btn-primary btn-sm" type="submit">Sign In</button>
            <div asp-validation-summary="ModelOnly" class="text-danger">

            </div>
            <a class="btn btn-primary btn-sm" asp-action="SignUp" asp-controller="Account">Sign Up</a>
        </div>
        
    </form>